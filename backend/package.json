{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "rimraf build frontend",
    "build": "babel src --out-dir build",
    "lint": "eslint 'src/**/*.js' --fix",
    "migrate": "sequelize db:migrate db:seed",
    "start:dev": "nodemon --inspect=9529 --exec babel-node src/index.js",
    "test": "jest",
    "sequelize": "sequelize"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/register": "^7.7.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "express": "~4.16.1",
    "express-session": "^1.17.0",
    "express-ws": "^4.0.0",
    "lodash": "^4.17.15",
    "morgan": "~1.9.1",
    "node-fetch": "^2.6.0",
    "node-uuid": "^1.4.8",
    "pg": "^7.12.1",
    "rimraf": "^3.0.0",
    "sequelize": "^5.21.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/node": "^7.6.3",
    "@babel/preset-env": "^7.6.3",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-module-resolver": "^3.2.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.4",
    "sequelize-cli": "^5.5.1",
    "sqlite3": "^4.1.0",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
