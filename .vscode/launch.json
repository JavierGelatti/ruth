{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch backend NPM",
            "runtimeExecutable": "npm",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "runtimeArgs": [
                "run",
                "start:dev"
            ],
            "port": 9529,
            "sourceMaps": true,
            "restart": true,
            "protocol": "inspector",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch frontend NPM",
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}/backend",
            "runtimeArgs": [
                "run",
                "start:dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],
    "compounds": [{
        "name": "Ruth",
        "configurations": ["Launch backend NPM", "Launch frontend NPM"]
    }]
}
